<h1>  <%= @task[:title]%> <%= link_to ("<i class='far fa-trash-alt'></i>").html_safe, task_path(@task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
</h1>
<p> completed :
  <% if @task[:completed] == true %>
    <i class="fas fa-check-square"></i>
  <% else  %>
    <i class="far fa-square"></i>
  <% end %>
</p>

<p>
  <%= @task[:details] %>
</p>



<ul>
<li>  <%= link_to "edit this task", edit_task_path(@task[:id]) %></li>

<li> <%= link_to "back to tasks", tasks_path %></li>
</ul>
