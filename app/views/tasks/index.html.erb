<h1>My tasks</h1>

<ul>
  <% @tasks.each do |task| %>
  <li>
    <% if task[:completed] == true %>
      <i class="fas fa-check-square"></i>
    <% else  %>
      <i class="far fa-square"></i>
    <% end %>
    <%= link_to task[:title], task_path(task[:id]) %>
    <%= link_to ("<i class='far fa-trash-alt'></i>").html_safe, task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
  </li>
  <% end %>
</ul>

 <%= link_to (("<i class='fas fa-plus'></i>").html_safe + " Add a new task "), new_task_path %>
